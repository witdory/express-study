# seolgu.kr → www 리다이렉트
server {
  listen 80;
  server_name seolgu.kr;
  return 301 http://www.seolgu.kr$request_uri;
}
server {
  listen 443 ssl;
  server_name seolgu.kr;
  ssl_certificate /etc/letsencrypt/live/www.seolgu.kr/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/www.seolgu.kr/privkey.pem;
  return 301 https://www.seolgu.kr$request_uri;
}

# www.seolgu.kr HTTP → HTTPS
server {
  listen 80;
  server_name www.seolgu.kr;
  return 301 https://www.seolgu.kr$request_uri;
}

# www.seolgu.kr HTTPS → backend 컨테이너로 프록시
server {
  listen 443 ssl;
  server_name www.seolgu.kr;

  ssl_certificate /etc/letsencrypt/live/www.seolgu.kr/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/www.seolgu.kr/privkey.pem;

  location / {
    proxy_pass http://backend:8080;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
}
