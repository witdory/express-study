<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %> - Seol9u</title>
    <link href="/main.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('nav.ejs')%>
    
    <div class="container">
        <div class="detail-bg">
            <h4><%= post.title %></h4>

            <div class="detail-info">
                <p><%=post.username%></p>
                <p>조회 <%=post.viewCount%></p>
                <%
                    const d = new Date(post.createdAt);
                    const year = d.getFullYear();
                    const month = (d.getMonth() + 1).toString().padStart(2, '0');
                    const day = d.getDate().toString().padStart(2, '0');
                    const hour = d.getHours().toString().padStart(2, '0');
                    const minute = d.getMinutes().toString().padStart(2, '0');
                    const formattedDate = `${year}-${month}-${day} ${hour}:${minute}`;
                %>
                <p><%= formattedDate %></p>
            </div>

            <%if(user){%>
                <% if(post.user?.toString() === user._id.toString()) { %>
                    <div class="action-buttons">
                        <a href="/post/edit/<%= post._id %>">수정</a>
                        <button id="deleteBtn" data-id="<%= post._id %>">삭제</button>
                    </div>
                <%}else if(user.username == 'admin'){%>
                    <div class="action-buttons">
                        <a href="/post/edit/<%= post._id %>">수정</a>
                        <button id="deleteBtn" data-id="<%= post._id %>">삭제</button>
                        <a href="/chat/request?writerId=<%=post.user%>">채팅하기</a>
                    </div>
                <%}else{%>
                    <div class="action-buttons">
                        <a href="/chat/request?writerId=<%=post.user%>">채팅하기</a>
                    </div>
                <%}%>
            <%}else{%>
                <div class="action-buttons">
                    <a href="/chat/request?writerId=<%=post.user%>">채팅하기</a>
                </div>
            <%}%>

            <% if (post.img) { %>
                <img src="<%= post.img %>" alt="게시글 이미지" style="max-width:100%; height:auto; margin: 10px 0;">
            <% } %>

            <div style="margin: 15px 0; line-height: 1.6;">
                <%= post.content %>
            </div>
            
            <div class="like-section">
                <div class="like-item">
                    <span>좋아요 <%=post.like || 0%></span>
                    <form action="/post/detail/<%=post._id%>/like" method="post" style="display: inline;">
                        <input type="hidden" name="postid">
                        <button type="submit">좋아요</button>
                    </form>
                </div>
                
                <div class="like-item">
                    <span>싫어요 <%=post.dislike || 0%></span>
                    <form action="/post/detail/<%=post._id%>/dislike" method="post" style="display: inline;">
                        <input type="hidden" name="postid">
                        <button type="submit">싫어요</button>
                    </form>
                </div>
            </div>

            <div class="comments-section">
                <h4>댓글 <%=comments.length%>개</h4>

                <div>
                    <%for(let i = 0; i<comments.length; i++){%>
                        <div class="comment">
                            <div class="comment-author"><%=comments[i].writerName%></div>
                            <div class="comment-content"><%= comments[i].content%></div>
                        </div>
                    <%}%>
                </div>

                <div class="comment-form">
                    <form action="/post/comment?parent=<%=post._id%>" method="POST">
                        <input name="content" placeholder="댓글을 입력하세요">
                        <button type="submit">댓글작성</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        const deleteBtn = document.getElementById('deleteBtn');
        if(deleteBtn) {
            deleteBtn.addEventListener('click', function(){
                const postId = this.dataset.id;
                if(confirm('정말 삭제하시겠습니까?')) {
                    fetch('/post/api/posts?postid=' + postId, {
                        method: 'DELETE'
                    })
                    .then(response => response.text())
                    .then(result => {
                        alert('게시글이 삭제되었습니다.');
                        window.location.href = '/post/list';
                    })
                    .catch(err => {
                        console.error(err);
                        alert('삭제 중 오류가 발생했습니다.');
                    });
                }
            });
        }
    </script>
</body>
</html>